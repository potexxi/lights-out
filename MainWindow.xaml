<Window x:Class="LightsOut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightsOut"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="550">
    <Canvas Name="CanvasPlay">
        <Rectangle Height="137" Opacity="0.3" Canvas.Left="15" Stroke="Black" Canvas.Top="77" Width="158" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Rectangle Height="101" Opacity="0.3" Canvas.Left="15" Stroke="Black" Canvas.Top="228" Width="158" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Name="LabelWin" Content="" Canvas.Left="204" Canvas.Top="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="ButtonReset" Content="Restart" Background="Coral" Canvas.Left="25" Canvas.Top="177" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ButtonReset_Click"/>
        <Label Name="LabelMoves" Content="Moves: 0" Canvas.Left="20" Canvas.Top="85" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Name="LabelWins" Content="Wins: 0" Canvas.Left="20" Canvas.Top="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Name="LabelAllMoves" Content="All-Time-Moves: 0" Canvas.Left="20" Canvas.Top="141" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="Stats" Background="White" Canvas.Left="27" Canvas.Top="62" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Color" Background="White" Canvas.Left="25" Canvas.Top="215" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButtonGray" IsChecked="True" Content="Gray" GroupName="Color" Canvas.Left="35" Canvas.Top="240" Checked="RadioButton_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <RadioButton x:Name="RadioButtonRed" Content="Red" GroupName="Color" Canvas.Left="35" Canvas.Top="260" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="RadioButtonBlue" Content="Blue" GroupName="Color" Canvas.Left="35" Canvas.Top="280" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="RadioButtonGreen" Content="Green" GroupName="Color" Canvas.Left="35" Canvas.Top="300" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <Label Content="Size:" Canvas.Left="15" Canvas.Top="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxSize" MaxLength="10" Canvas.Left="50" TextWrapping="Wrap" Text="" Canvas.Top="18" Width="123" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBoxSize_TextChanged"/>
        <Button x:Name="ButtonApplySize" Content="Apply" Canvas.Left="128" Canvas.Top="41" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Click="ButtonApplySize_Click"/>


    </Canvas>
</Window>
